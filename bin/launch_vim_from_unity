
import sys
import subprocess

fn=sys.argv[1].replace('"', '').replace("\\", "/").replace("C:", "/cygdrive/c")
subprocess.call([
	"C:/cygwin64/bin/mintty.exe",
	"-i", "/Cygwin-Terminal.ico",
	"--",
	"C:/cygwin64/bin/sh.exe",
	"-c", """source /home/Johannes/.profile; /usr/bin/vim "{0}" +{1}""".format(fn, sys.argv[2])],
	stdout=sys.stdout, stdin=sys.stdin)


